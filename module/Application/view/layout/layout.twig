    <!-- Bootstrap core JavaScript
    ================================================== -->
    <!-- Placed at the end of the document so the pages load faster -->
    <script src="{{ basePath('/cloud/assets/jquery-1.11.1.min.js') }}"></script>
    <script src="{{ basePath('/cloud/assets/bootstrap-3.2.0-dist/js/bootstrap.min.js') }}"></script>
    <script src="{{ basePath('/cloud/assets/bootstrap-3.2.0-dist/js/docs.min.js') }}"></script>
