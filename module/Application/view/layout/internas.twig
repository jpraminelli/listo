<!DOCTYPE html>
<html lang="pt-br">
    <head>
        <script type="text/javascript">
            var pathroot = "{{ basePath('/cloud') }}";
        </script>    
        <meta charset="utf-8">
        {{ headMeta() }}  
        <meta http-equiv="X-UA-Compatible" content="IE=edge">
        <meta name="viewport" content="width=device-width, initial-scale=1">
        {{ headTitle() }}

        <!-- Bootstrap core CSS -->
        <link href="{{ basePath('/cloud/assets/bootstrap-3.2.0-dist/css/bootstrap.min.css') }}" rel="stylesheet">

        <!-- Custom styles for this template -->
        <link href="{{ basePath('/cloud/assets/bootstrap-3.2.0-dist/css/blog.css') }}" rel="stylesheet">
        <!-- Just for debugging purposes. Don't actually copy these 2 lines! -->
        <!--[if lt IE 9]><script src="../../assets/js/ie8-responsive-file-warning.js"></script><![endif]-->
        <script src="{{ basePath('/cloud/assets/bootstrap-3.2.0-dist/js/ie-emulation-modes-warning.js') }}"></script>

        <!-- HTML5 shim and Respond.js IE8 support of HTML5 elements and media queries -->
        <!--[if lt IE 9]>
          <script src="https://oss.maxcdn.com/html5shiv/3.7.2/html5shiv.min.js"></script>
          <script src="https://oss.maxcdn.com/respond/1.4.2/respond.min.js"></script>
        <![endif]-->
    </head>

    <body>

        <div class="blog-masthead">
            <div class="container">
                <nav class="blog-nav">
                    <a class="blog-nav-item" href="{{ url('front') }}">Home</a>
                    <a class="blog-nav-item" href="#">New features</a>
                    <a class="blog-nav-item" href="#">Press</a>
                    <a class="blog-nav-item" href="#">New hires</a>
                    <a class="blog-nav-item active" href="{{ url('noticias') }}">Notícias</a>
                    <a class="blog-nav-item" href="#">About</a>
                </nav>
            </div>
        </div>

        <div class="container">
            
             <div id="flash">{{ flash() }}</div>
            {# o filtro '|raw' no content abaixo permite que as views possam ser, além do twig, em phtml padrão #}
            {% block content %}{{ content|raw }}{% endblock content %}



        </div><!-- /.container -->

        <div class="blog-footer">
            <p>Blog template built for <a href="http://getbootstrap.com">Bootstrap</a> by <a href="https://twitter.com/mdo">@mdo</a>.</p>
            <p>
                <a href="#">Back to top</a>
            </p>
        </div>
    {% block inlineScript %}{% endblock inlineScript %}

        <!-- Bootstrap core JavaScript
        ================================================== -->
        <!-- Placed at the end of the document so the pages load faster -->
        <script src="{{ basePath('/cloud/assets/jquery-1.11.1.min.js') }}"></script>
        <script src="{{ basePath('/cloud/assets/bootstrap-3.2.0-dist/js/bootstrap.min.js') }}"></script>
        <script src="{{ basePath('/cloud/assets/bootstrap-3.2.0-dist/js/docs.min.js') }}"></script>
        <!-- IE10 viewport hack for Surface/desktop Windows 8 bug -->
        <script src="{{ basePath('/cloud/assets/bootstrap-3.2.0-dist/js/ie10-viewport-bug-workaround.js') }}"></script>
    </body>
</html>
