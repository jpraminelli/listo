<html>
    <!DOCTYPE html>
<html lang="pt-br">
    <head>
        <meta charset="utf-8">
        <meta name="google-site-verification" content="-p5kWsP3u8LWKAfKGitQH7h8dGiChlxA5A9vBco6WUI">
        <meta name="viewport" content="width=device-width, initial-scale=1.0">
        {% block meta %}{% endblock meta %}
        <title>{% block title %}{{ constant('APP_NAME') }}{% endblock title %}</title>
        <link href="{{ basePath('/adm/bootstrap/css/bootstrap.min.css') }}" media="screen" rel="stylesheet" type="text/css">
        <link href="{{ basePath('/adm/css/estilos.css') }}" media="screen" rel="stylesheet" type="text/css">
        {% block style %}{% endblock style %}
        <!--[if lt IE 9]>
            <script src="https://oss.maxcdn.com/libs/html5shiv/3.7.0/html5shiv.js"></script>
            <script src="https://oss.maxcdn.com/libs/respond.js/1.3.0/respond.min.js"></script>
        <![endif]-->
        <script type="text/javascript" src="{{ basePath('/adm/jquery/jquery-1.10.2.min.js') }}"></script>
        <script type="text/javascript" src="{{ basePath('/adm/jquery/jquery-ui-1.10.4.custom.min.js') }}"></script>
        <script type="text/javascript" src="{{ basePath('/adm/bootstrap/js/bootstrap.min.js') }}"></script>
        <script type="text/javascript" src="{{ basePath('/adm/js/jquery.remoteform.js') }}"></script>
        <script type="text/javascript" src="{{ basePath('/adm/js/jquery.maskedinput.min.js') }}"></script>
        <script type="text/javascript" src="{{ basePath('/adm/js/jquery.maskMoney.js') }}"></script>
        {% block headScript %}{% endblock headScript %}
    </head>

    <body>
        {# ------------------------------------------------------------------------------------------------------------------------------------- #}
        {# CONTENT #}
        {# ------------------------------------------------------------------------------------------------------------------------------------- #}
        {% block content %}
            
            <div class="row">
                <div class="col-md-4 col-md-offset-4">
                    
                    <br><br><div id="flash">{{ flash() }}</div><br><br>
                    
                    <form action="{{ url('login') }}" method="post" role="form">
                        {{ formHidden(form.get('validator')) }}
                        <div class="panel panel-default">
                            <div class="panel-heading">
                                <h3 class="panel-title">Login</h3>
                            </div>
                            <div class="pagina-body">
                                <div class="form-group">
                                    <label for="usuario[login]" class="control-label">Usu√°rio:</label>
                                    <input id="usuario[login]" name="usuario[login]" autocomplete="off" class="form-control" maxlength="50">
                                </div>
                                <div class="form-group">
                                    <label for="usuario[senha]" class="control-label">Senha</label>
                                    <input id="usuario[senha]" name="usuario[senha]" type="password" autocomplete="off" class="form-control" maxlength="50">
                                </div>
                                <div class="form-group">
                                    <button id="salvar" type="submit" class="btn btn-primary">Entrar</button>
                                </div>
                            </div>
                            <div class="panel-footer">

                            </div>
                        </div>
                    </form>
                </div>
            </div>
        {% endblock content %}

        {# ------------------------------------------------------------------------------------------------------------------------------------- #}
        {# JAVASCRIPT (inline) #}
        {# ------------------------------------------------------------------------------------------------------------------------------------- #}
        {% block inlineScript %}
            
            <script type="text/javascript">
                $(function() {
                    $('form').remoteform({
                        onOkForwardTo: '{{ basePath() }}'
                    });
                });
            </script>
        {% endblock inlineScript %}
    </body>
</html>
