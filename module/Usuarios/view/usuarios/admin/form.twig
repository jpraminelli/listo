{# ------------------------------------------------------------------------------------------------------------------------------------- #}
{# Extende o layout #}
{# ------------------------------------------------------------------------------------------------------------------------------------- #}
{% extends 'layout/admin' %}

{# ------------------------------------------------------------------------------------------------------------------------------------- #}
{# TITLE #}
{# ------------------------------------------------------------------------------------------------------------------------------------- #}
{% block title %}{{ parent() }} - {{ title }}{% endblock title %}

{# ------------------------------------------------------------------------------------------------------------------------------------- #}
{# CONTENT #}
{# ------------------------------------------------------------------------------------------------------------------------------------- #}
{% block content %}
<div class="row">
    <div class="col-md-12">
        <form action="{{ url('admin|usuarios|form') }}" method="post" role="form">
            <div class="panel panel-default">
                <div class="panel-heading">
                    <h3 class="panel-title">{{ title }}</h3>
                </div>
                <div class="panel-body">
                    
                    {{ formHidden(form.get('validator')) }}
                    {{ formHidden(form.get('id')) }}                    
                    
                    <div class="row">
                        <div class="col-md-12">
                            <div class="form-group">
                                <label for="nome" class="control-label">Nome</label>
                                {{ formText(form.get('nome')) }}
                            </div>
                        </div>
                    </div>
                    
                    <div class="row">
                        <div class="col-md-4">
                            <div class="form-group">
                                <label for="login" class="control-label">Login</label>
                                {{ formText(form.get('login')) }}
                            </div>
                        </div>
                        <div class="col-md-4">
                            <div class="form-group">
                                <label for="senha" class="control-label">Senha</label>
                                {{ formPassword(form.get('senha')) }}
                            </div>
                        </div>
                        <div class="col-md-4">
                            <div class="form-group">
                                <label for="senha2" class="control-label">Repetir a senha</label>
                                {{ formPassword(form.get('senha2')) }}
                            </div>
                        </div>
                    </div>

                    <div class="row">
                        <div class="col-md-12">
                            <div class="form-group">
                                <div class="checkbox">
                                    <label>
                                        {{ formCheckbox(form.get('visivel')) }}
                                        Este usuário está visível e pode logar-se no sistema.
                                    </label>
                                </div>
                            </div>
                        </div>
                    </div>
                                        
                </div>
                <div class="panel-footer">
                    <button id="salvar" type="submit" class="btn btn-primary">Salvar</button>
                    <a href="{{ backTo() }}" class="btn btn-default">Cancelar</a>
                </div>
                
            </div>
        </form>
    </div>
</div>
{% endblock content %}

{# ------------------------------------------------------------------------------------------------------------------------------------- #}
{# JAVASCRIPT (inline) #}
{# ------------------------------------------------------------------------------------------------------------------------------------- #}
{% block inlineScript %}
{{ parent() }}
<script type="text/javascript">
    $(function() {
        $('form').remoteform({
            onOkForwardTo: '{{ backTo() }}'
        });
    });
</script>
{% endblock inlineScript %}
